<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <include layout="@layout/ribbons_view" />

    <TextView
        android:id="@+id/result"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="__ __ __ __ __" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <include layout="@layout/button_left" />

        <include layout="@layout/button_middle" />

        <include layout="@layout/button_right" />

    </LinearLayout>

    <include layout="@layout/ribbon_number" />

    <include layout="@layout/clear_group" />


</LinearLayout>