<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <include layout="@layout/ribbon_number" />

    <include layout="@layout/ribbons_view" />

    <TextView
        android:id="@+id/result"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--        android:text="what ?"-->
    <!--        android:textSize="32sp"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <include layout="@layout/button_left" />

        <include layout="@layout/button_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/view_frame"
            android:text="@string/clear"
            android:onClick="clear"
            android:layout_marginEnd="@dimen/button_space" />

        <Button
            android:layout_marginStart="@dimen/button_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_frame"
            android:text="@string/delete"
            android:onClick="delete" />
    </LinearLayout>
</LinearLayout>