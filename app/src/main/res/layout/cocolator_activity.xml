<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:background="@drawable/arrow_right"
        android:layout_width="40dp"
        android:onClick="open"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C3C04"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">

        <include layout="@layout/ribbons_view" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="__ __ __ __ __"
            android:textColor="@color/white_text"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <include layout="@layout/button_left" />

            <include layout="@layout/button_middle" />

            <include layout="@layout/button_right" />

        </LinearLayout>

        <include layout="@layout/ribbon_number" />

        <include layout="@layout/clear_group" />


    </LinearLayout>
</RelativeLayout>